<launch>

	<arg name="debug" default="false"/>
	<arg name="gui" default="false"/>
	<arg name="pause" default="false"/>
	<arg name="world" value="$(find indoor_nav)/world/indoor_world_01.world"/>

  	<include file="$(find gazebo_ros)/launch/empty_world.launch">
  		<arg name="world_name" default="$(arg world)"/>
	    <arg name="debug" value="$(arg debug)"/>
	    <arg name="gui" value="$(arg gui)"/>
	  	<arg name="paused" value="$(arg pause)"/>
	    <arg name="use_sim_time" value="true"/>
  	</include>

	<include file="$(find ridgeback_gazebo)/launch/spawn_ridgeback.launch">
		<arg name="config" default="dual_hokuyo_lasers" />
	    <arg name="x" default="-4.5"/>
	    <arg name="y" default="-6.0"/>
	    <arg name="z" default="0.025893"/>
	    <arg name="yaw" default="0"/>
	</include>

	<!-- AMCL -->
	<include file="$(find ridgeback_navigation)/launch/amcl_demo.launch"/>

	<!--- Move Base -->
  	<!-- <include file="$(find ridgeback_navigation)/launch/include/move_base.launch" /> -->

    <node pkg="map_server" name="map_server" type="map_server" args="$(find indoor_nav)/maps/dual_hoyuko_full_map.yaml"/>

    <!-- Hybrid A* -->
    <node pkg="hybrid_astar" type="hybrid_astar" name="hybrid_astar" output="screen"/>

    <!-- Pure Pursuit -->
    <node pkg="hybrid_astar" type="pure_pursuit" name="pure_pursuit" output="screen"/>

    <arg name="config" default="hybrid_astar" />
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find hybrid_astar)/rviz/$(arg config).rviz" />

</launch>